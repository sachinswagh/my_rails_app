
<h1>Listing Users</h1>
<table>
  <tr>
    <th>Username </th>
    <th>Email ID</th>
    
  </tr>
 
<% @users.each do |user| %>
  <tr>
    <td><%= user.user_name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show details', user_path(user) %></td>
    <td><%= link_to 'Edit details', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy User', user_path(user),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<%= link_to 'Create User', new_user_path() %>