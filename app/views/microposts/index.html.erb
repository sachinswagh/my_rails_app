<h1>Listing Microposts</h1>
<table>
  <tr>
    <th>Content</th>
    <th>User ID</th>
    <th> </th>
    <th> </th>
    <th> </th>

  </tr>
 
<% @microposts.each do |micropost| %>
  <tr>
    <td><%= micropost.content %></td>
    <td><%= micropost.user_id %></td>
    <td><%= link_to 'Show details', micropost_path(micropost) %></td>
    <td><%= link_to 'Edit details', edit_micropost_path(micropost) %></td>
    <td><%= link_to 'Destroy Miropost', micropost_path(micropost),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


